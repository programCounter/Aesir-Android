<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setup_bsi_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bsi_fragment_title"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setup_bsi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setup_bsi_title2" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/setup_bsi_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsi_setup_description">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bsi_settings_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/bsi_settings_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bsi_analog_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/bsi_analog_sensor_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sensor_setting_header" />

            <Spinner
                android:id="@+id/bsi_analog_1_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/bsi_analog_1_text"
                app:layout_constraintTop_toTopOf="@+id/bsi_analog_1_text" />

            <TextView
                android:id="@+id/bsi_power_on_delay_analog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_power_on_delay"
                app:layout_constraintStart_toStartOf="@+id/bsi_analog_1_text"
                app:layout_constraintTop_toBottomOf="@+id/bsi_analog_1_spinner" />

            <EditText
                android:id="@+id/bsi_power_on_delay_input_analog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_power_on_delay_input_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_power_on_delay_analog1"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_measurement_interval_analog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_measurement_interval"
                app:layout_constraintStart_toStartOf="@+id/bsi_power_on_delay_analog1"
                app:layout_constraintTop_toBottomOf="@+id/bsi_power_on_delay_analog1" />

            <EditText
                android:id="@+id/bsi_measurement_interval_input_analog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_measurement_interval_input_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_measurement_interval_analog1"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_analog_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="@string/bsi_analog_sensor_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bsi_measurement_interval_analog1" />

            <Spinner
                android:id="@+id/bsi_analog_2_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/bsi_analog_2_text"
                app:layout_constraintTop_toTopOf="@+id/bsi_analog_2_text" />

            <TextView
                android:id="@+id/bsi_power_on_delay_analog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_power_on_delay"
                app:layout_constraintStart_toStartOf="@+id/bsi_analog_2_text"
                app:layout_constraintTop_toBottomOf="@+id/bsi_analog_2_spinner" />

            <EditText
                android:id="@+id/bsi_power_on_delay_input_analog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_power_on_delay_input_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_power_on_delay_analog2"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_measurement_interval_analog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_measurement_interval"
                app:layout_constraintStart_toStartOf="@+id/bsi_power_on_delay_analog2"
                app:layout_constraintTop_toBottomOf="@+id/bsi_power_on_delay_analog2" />

            <EditText
                android:id="@+id/bsi_alarm_shutoff_input_analog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_measurement_interval_input_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_measurement_interval_analog2"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/bsi_pulse_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="@string/bsi_pulse_sensor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bsi_measurement_interval_analog2" />

            <Spinner
                android:id="@+id/bsi_pulse_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/bsi_pulse_text"
                app:layout_constraintTop_toTopOf="@+id/bsi_pulse_text" />

            <TextView
                android:id="@+id/bsi_power_on_delay_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_flood_alarm_trigger_pulse"
                app:layout_constraintStart_toStartOf="@+id/bsi_pulse_text"
                app:layout_constraintTop_toBottomOf="@+id/bsi_pulse_spinner" />

            <EditText
                android:id="@+id/bsi_alarm_trigger_input_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_flood_alarm_rate_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_power_on_delay_pulse"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_measurement_interval_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_flood_alarm_shutoff_rate"
                app:layout_constraintStart_toStartOf="@+id/bsi_power_on_delay_pulse"
                app:layout_constraintTop_toBottomOf="@+id/bsi_power_on_delay_pulse" />

            <EditText
                android:id="@+id/bsi_alarm_shutoff_input_pulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_flood_alarm_rate_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/bsi_measurement_interval_pulse"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/bsi_tx_interval_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_tx_interval_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bsi_tx_interval"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_tx_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_tx_interval"
                app:layout_constraintStart_toStartOf="@+id/bsi_name"
                app:layout_constraintTop_toBottomOf="@+id/bsi_name" />

            <TextView
                android:id="@+id/sensor_setting_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/sensor_settings_header"
                app:layout_constraintStart_toStartOf="@+id/bsi_tx_interval"
                app:layout_constraintTop_toBottomOf="@+id/bsi_upld_interval" />

            <TextView
                android:id="@+id/bsi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/bsi_name"
                app:layout_constraintStart_toStartOf="@+id/bsi_settings_header"
                app:layout_constraintTop_toBottomOf="@+id/bsi_settings_header" />

            <EditText
                android:id="@+id/bsi_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/placeholder_text"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bsi_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/bsi_upld_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bsi_upld_interval"
                app:layout_constraintStart_toStartOf="@+id/bsi_tx_interval"
                app:layout_constraintTop_toBottomOf="@+id/bsi_tx_interval" />

            <EditText
                android:id="@+id/bsi_upld_interval_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/bsi_upld_interval_input_hint"
                android:inputType="number"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/bsi_upld_interval"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/bsi_setup_description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bsi_setup_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bsi_battery_icon" />

    <Button
        android:id="@+id/setup_bsi_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/setup_submit_changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bsi_battery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/setup_bsi_title"
        app:layout_constraintTop_toBottomOf="@+id/setup_bsi_title"
        app:srcCompat="@drawable/ic_battery_full_black_24dp" />

    <TextView
        android:id="@+id/bsi_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/bsi_battery_icon"
        app:layout_constraintStart_toEndOf="@+id/bsi_battery_icon"
        app:layout_constraintTop_toTopOf="@+id/bsi_battery_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>